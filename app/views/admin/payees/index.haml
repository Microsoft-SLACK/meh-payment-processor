%h2 My Payees
%a{:href => "/admin/payees/new"} Add New
%table#payees
  %tr
    %th Name
    %th Email
    %th Maximum Amount
    %th
    %th
  - for payee in @payees
    %tr{:id => payee.id}
      %td
        - name = h payee.name
        = name.blank? ? h(payee.email.split("@").first.capitalize) : name
      %td
        - email = h payee.email
        %a{:href => "mailto:#{email}"}
          = email
      %td
        - amount = payee.maximum_amount
        - if amount.zero?
          Unlimited
        - else
          = h(amount.format(:symbol => false) << " " << amount.currency.iso_code)
      %td
        %a{:href => "/admin/payees/#{payee.id}/edit"}
          Edit
      %td
        %a{:href => "/admin/payees/#{payee.id}", :method => :delete}
          Delete
